      <link href="angular-datepicker/src/css/angular-datepicker.css" rel="stylesheet" type="text/css" />

	  <script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
      
     <script src="//ajax.googleapis.com/ajax/libs/angularjs/1.2.1/angular-sanitize.min.js"></script> 
     
      <link href='https://fonts.googleapis.com/css?family=Montserrat' rel='stylesheet' type='text/css'>
      <body ng-app='events' ng-nit="net='Tyep of Event'">
      
      <div class="container" ng-controller='eventsControl' ng-init="Current=true;old=!Current;newEventTypeCaption='Event Type'">
      		
      		<ul class="nav nav-tabs" style='margin-top:5%'>
		 		 <li class="active" ng-click='showCurrent();'><a href="" >Current</a></li>
		  		<li class="active" ng-click='showOld();'><a href="" >Previous</a></li>
		  		<li class="active" ng-click='showNew();'><a href="" >Create Event</a></li>
		 
			</ul>
			
		<div id='slider' class="col-xs-12" ng-show='newEvent'>
				<div id='header'>
					<form role="form" action='events/new' method='POST'>
					  <div class="form-group">
					    <label for="eventNAme">Event Name</label>
					    <input type="text" name='name' ng-model='newEventName' class="form-control col-md-4" id="eventName">
					  </div>
					 	
					<div class="dropdown">
						 <button class="btn btn-default dropdown-toggle" type="button" data-toggle="dropdown">\{{newEventTypeCaption}}
						 <span class="caret"></span></button>
						 <input type='text'style='display:none;' ng-model='newEventType' name='Type' id='eventType'>
						 <ul class="dropdown-menu">
						  {{#each eventTypes}}

								<li><a href="" ng-click="setType({{id}},'{{name}}');">{{id}} .&nbsp{{name}}</a></li>

						   {{/each}}
						   
						 </ul>
					</div>
					

			 


					<br>
					  <div class="form-group">
						  <label for="comment">Description</label>
						  <textarea ng-model='newEventDesc' class="form-control" rows="5" id="comment" name='description'></textarea>
					 </div>
					
					  <h5><b>Date</b></h5>

					 <datepicker>
					    <input class='form-control' ng-model="newEventDate" name='date' style='color:white;background:skyblue;'type="text" placeholder='click to select a date'/>
					</datepicker>
					  

					  <button type="submit" class="btn btn-default">Submit</button>
					</form>

				</div>      

	      </div>


	      <div id='slider' class="col-xs-12" ng-show='Current'>
				<div id='header'>
					{{#each events}}

						<div class='row event'>
							<div class='eventHead col-md-4 col-s-6 col-xs-12' style="background:url(images/{{image}});background-size:cover;"></div>

							<div class='eventDesc col-md-8 col-s-6 col-xs-12'>
							    <h3 class='eventName'>  {{name}}  </h3>
								<h6> {{event_info}} </h6>
								<div class='eventDate col-md-8'><h6> {{eventDate}} </h6></div>
								<button class='btn col-md-4'>more</button>
							</div>
							
						</div>

					{{/each}}

				</div>      

	      </div>








	      <div id='slider' class="starter-template col-xs-12" ng-show='Old'>
	      		<div id='header'>
			        
			        

					
					{{#each events}}

						<div class='row oldEvent'>
							<div class='OldeventHead col-md-4 col-s-6 col-xs-12' style="background:url(images/{{image}});background-size:cover;"><h4 class='eventName'> OLD EVENT {{name}}  </h4></div>

							<div class='eventDesc col-md-8 col-s-6 col-xs-12'>
								<h6> {{event_info}} </h6>
								<div class='eventDate col-md-8'><h6> {{eventDate}} </h6></div>
								<button class='btn col-md-4'>more</button>
							</div>
							
						</div>

					{{/each}}

				</div>      

	      </div>
	   </div>

	   <script src="angular-datepicker/src/js/angular-datepicker.js"></script>
	   <script type="text/javascript" src='js/app.js'></script>
</body>